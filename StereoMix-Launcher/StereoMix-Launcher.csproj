<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net8.0-windows</TargetFramework>
        <RootNamespace>StereoMix_Launcher</RootNamespace>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UseWPF>true</UseWPF>
    </PropertyGroup>

    <ItemGroup>
      <Folder Include="resources\" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="resources\StereoMix.png" />
      <Resource Include="resources\StereoMix.png" />
      <None Remove="resources\Background.png" />
      <Resource Include="resources\Background.png" />
      <None Remove="resources\GradientBackground.png" />
      <Resource Include="resources\GradientBackground.png" />
      <None Remove="resources\Surround.png" />
      <Resource Include="resources\Surround.png" />
    </ItemGroup>

</Project>
